@model IEnumerable<Rocky.Models.ApplicationType>

@{
    ViewBag.Title = "Application Type";
    Layout = "_Layout";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type</h2>
        </div>
        <div class="col-6 text-right">
                <a asp-action="Create" asp-controller="ApplicationType" class="btn btn-primary">
                    Create New Type</a>
        </div>
    </div>
    <br/> <br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Id</td>
                    <td width="50%">@obj.Name</td>
                    <td></td>
                </tr>
            }
            </tbody>
         </table>
    }
    else
    {
        <p>No type found...</p>
    }
</div>