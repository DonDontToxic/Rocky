@model IEnumerable<Rocky_Models.ApplicationType>

@{
    ViewBag.Title = "Application Type";
    Layout = "_Layout";
}

<div class="container bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type</h2>
        </div>
        <div class="col-6 text-right">
                <a asp-action="Create" asp-controller="ApplicationType" class="btn btn-primary">
                    <i class="fas fa-plus"></i>&nbsp; Create New Type</a>
        </div>
    </div>
    <br/> <br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Type</th>
                <th class="text-center">Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="30%">@obj.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Edit" asp-route-Id="@obj.Id" asp-controller="ApplicationType" class="btn btn-info mx-2">
                                <i class="fas fa-edit"></i></a>
                            <a asp-action="Delete" asp-route-Id="@obj.Id" asp-controller="ApplicationType" class="btn btn-danger mx-2">
                                <i class="fas fa-trash-alt"></i></a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
         </table>
    }
    else
    {
        <p>No type found...</p>
    }
</div>